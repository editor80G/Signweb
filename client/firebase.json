{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/publications/**",
        "function": "publications"
      },
      {
        "source": "/search/**",
        "function": "search"
      },
      {
        "source": "/auth/**",
        "function": "auth"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}