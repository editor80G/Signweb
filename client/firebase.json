{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/publications/**",
        "destination": "https://signweb-server-6655698061.europe-west8.run.app/publications/**"
      },
      {
        "source": "/search/**",
        "destination": "https://signweb-server-6655698061.europe-west8.run.app/search/**"
      },
      {
        "source": "/auth/**",
        "destination": "https://signweb-server-6655698061.europe-west8.run.app/auth/**"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}